<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_g2_hard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.application.brainfit.G2Hard">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:text="Q1."/>

        <TextView
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_marginStart="25dp"
            android:text="Never let a stumble in the road be the end of the journey."
            android:textSize="25dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/btn_mic1"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/mic"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:text="speak here"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="65dp"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_height="71dp"
            android:layout_width="340dp"
            android:textSize="25dp"
            android:layout_marginStart="-320dp"
            android:layout_marginTop="160dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_below="@+id/ll1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:text="Q2."/>
        <ImageView
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/library"/>
        <ImageButton
            android:id="@+id/btn_mic2"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/mic"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:text="speak here"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="65dp"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_height="71dp"
            android:layout_width="340dp"
            android:textSize="25dp"
            android:layout_marginStart="-320dp"
            android:layout_marginTop="160dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/ll3"
        android:orientation="horizontal"
        android:layout_below="@+id/ll2"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q3."
            android:textSize="25dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/beach"
            android:layout_marginStart="25dp"/>

        <ImageButton
            android:id="@+id/btn_mic3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/mic"
            android:layout_marginTop="40dp"
            android:layout_marginStart="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="speak here"
            android:textSize="15dp"
            android:layout_marginTop="65dp"
            android:layout_marginStart="-50dp" />
        <TextView
            android:id="@+id/tv3"
            android:layout_height="71dp"
            android:layout_width="340dp"
            android:textSize="25dp"
            android:layout_marginStart="-320dp"
            android:layout_marginTop="160dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/ll4"
        android:orientation="horizontal"
        android:layout_below="@+id/ll3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q4."
            android:textSize="25dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/laptop"
            android:layout_marginStart="25dp"/>

        <ImageButton
            android:id="@+id/btn_mic4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/mic"
            android:layout_marginTop="40dp"
            android:layout_marginStart="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="speak here"
            android:textSize="15dp"
            android:layout_marginTop="65dp"
            android:layout_marginStart="-50dp"/>
        <TextView
            android:id="@+id/tv4"
            android:layout_height="71dp"
            android:layout_width="340dp"
            android:textSize="25dp"
            android:layout_marginStart="-320dp"
            android:layout_marginTop="160dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/ll5"
        android:orientation="horizontal"
        android:layout_below="@+id/ll4"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q5."
            android:textSize="25dp"/>

        <TextView
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_marginStart="25dp"
            android:text="Hope is only thing stronger."
            android:textSize="25dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/btn_mic5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/mic"
            android:layout_marginTop="40dp"
            android:layout_marginStart="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="speak here"
            android:textSize="15dp"
            android:layout_marginTop="65dp"
            android:layout_marginStart="-50dp" />
        <TextView
            android:id="@+id/tv5"
            android:layout_height="71dp"
            android:layout_width="340dp"
            android:textSize="25dp"
            android:layout_marginStart="-320dp"
            android:layout_marginTop="160dp"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextbtn"
        android:text="submit"
        android:layout_below="@+id/ll5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
</ScrollView>